{
	"name": "vue-boilerplate",
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check \"build-only {@}\" --",
		"preview": "vite preview",
		"build-only": "vite build",
		"upgrade": "npx npm-check-updates -i -u && pnpm install",
		"type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
		"lint:js": "eslint --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .lintignore .",
		"lintfix:js": "pnpm lint:js --fix",
		"lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .lintignore --config stylelint.config.js",
		"lintfix:style": "pnpm lint:style --fix",
		"lint:prettier": "prettier --ignore-path ./.lintignore --check .",
		"lintfix:prettier": "prettier --ignore-path ./.lintignore --write --list-different .",
		"lint": "pnpm lint:js && pnpm lint:style && pnpm lint:prettier",
		"lintfix": "pnpm lintfix:prettier && pnpm lintfix:js && pnpm lintfix:style"
	},
	"dependencies": {
		"vue": "^3.3.4",
		"@fontsource/amaranth": "^5.0.8",
		"@fontsource/roboto": "^5.0.8"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.4.0",
		"@tsconfig/node18": "^18.2.2",
		"@types/node": "^20.6.3",
		"@vitejs/plugin-vue": "^4.3.4",
		"@vue/eslint-config-prettier": "^8.0.0",
		"@vue/eslint-config-typescript": "^12.0.0",
		"@vue/tsconfig": "^0.4.0",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-vue": "^9.17.0",
		"npm-run-all2": "^6.0.6",
		"postcss": "^8.4.30",
		"postcss-extend": "^1.0.5",
		"postcss-html": "^1.5.0",
		"postcss-import": "^15.1.0",
		"prettier": "^3.0.3",
		"stylelint": "^15.10.3",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-config-standard": "^34.0.0",
		"tailwindcss": "^3.3.3",
		"typescript": "~5.2.2",
		"vite": "^4.4.9",
		"vue-tsc": "^1.8.13"
	}
}
